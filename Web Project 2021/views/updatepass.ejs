<!DOCTYPE html>
<html>
	<head>
        <meta charset="utf-8">
        <title>Web Inspector</title>  
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <link rel="stylesheet" href="css/style.css">
		    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> 
        
        <style>
      .Update-password {
				width: 300px;
				margin: 0 auto;
				font-family: Tahoma, Geneva, sans-serif;
			}
			.Update-password h1 {
				text-align: center;
				color: #4d4d4d;
				font-size: 24px;
				padding: 20px 0 20px 0;
			}
      .Update-password input[type="password"] {
				width:100%;
				height:45px;
				margin-bottom:15px;
				border: 1px solid #dddddd;
			}	
			.Update-password input[type="text"] {
				width: 100%;
				height:45px;
				border: 1px solid #dddddd;
				margin-bottom: 15px;
			}
			.Update-password button[type="submit"] {
				width: 102%;
				height:47px;
				background-color: #4d4d4d;
				border: 0;
				cursor: pointer;
				font-weight: bold;
				color: #ffffff;
			}
            .nav-form {
                background-color: #4d4d4d;
                color:cornsilk;
                padding: 20px 60px;
                display: flex;
                justify-content: space-between;
            }
            .nav-form h4 {
			          text-align: center;
		          	color: #2b2121;
			          font-size: 30px;
                padding: 10px 65px 15px 0;
                margin-left: 100px;
            }
            .nav-form ul {
                display:flex;
                justify-content:center;
                align-items:center;
            }
            .nav-form li {
                list-style: none
            }
            .nav-form li a {
                color:cornsilk;
                text-decoration:none;
                font-weight:bold;
                padding:5px 8px;
                }
            .nav-form li a:hover {
                color: yellow; 
                text-decoration:none;
            }
            .lead {
                color:rgb(0, 0, 0);
                font-weight:bold;
            }


        </style>
        
    </head>

    <body>
      <div class="nav-form">
        <nav>
          <h4 style=color:white>Web Inspector</h4>
          <ul>
            <li><a href="/home">Home</a></li>
            <li><a href="/updateacc">Account</a></li>
          </ul>
        </nav>
      </div>
		
		 <div class="Update-password">
			<h1>Update Password</h1>
      <form action="/updatepass" method="POST">
                <input type="text" name="username" placeholder="Username" required> 
                <input type="password" name="oldpassword" placeholder="Old Password" required>
                <input type="password" name="newpassword" placeholder="New Password" id="newpassword" required>
                <input type="password" name="repnewpassword" placeholder="Repeat Password" id="oldpassword"  required>
                <span toggle="#password-field" class="fa  fa-eye field-icon toggle-password" id ="togglePassword"></span>
                <button type="submit">Submit</button>
                <p style=color:red>
                  <%if(perror){%>
                    <%="This is not your username"%>
                   <%}%>
                   <%if(p1error){%>
                    <%="New password you entered does not match the requirements"%>
                   <%}%>
                   <%if(p2error){%>
                    <%="Username or Old Password you entered is inccorect"%>
                   <%}%>
                   </p>
			</form>
		 </div>
     <script>
			const togglePassword = document.querySelector('#togglePassword');
			const password = document.querySelector('#newpassword');
      const password2 = document.querySelector('#oldpassword');
			togglePassword.addEventListener('click', function (e) {
   			// toggle the type attribute
    		const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
    		password.setAttribute('type', type);
        const type2 = password2.getAttribute('type') === 'password' ? 'text' : 'password';
    		password2.setAttribute('type', type2);
    		// toggle the eye slash icon
    		this.classList.toggle('fa-eye-slash');
			});
		</script>
	     
	</body>